{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "sourceMap": true,

  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}